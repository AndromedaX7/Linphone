<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/colorPrimaryDark"
            android:elevation="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/settings"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18"
            android:translationZ="@dimen/dp_5" />

        <LinearLayout
            android:id="@+id/mUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="@dimen/dp_10"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_16"
            android:translationZ="@dimen/dp_2">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60" android:id="@+id/mIcon"
                android:layout_marginLeft="@dimen/dp_30"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:text="傻鱼"
                    android:textColor="@color/colorTextColorDark"
                    android:textSize="@dimen/sp_18" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_number" />

                    <TextView
                        android:id="@+id/mAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="1001" />
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"

                android:src="@drawable/ic_next" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@android:color/white"
            android:elevation="@dimen/dp_10"
            android:padding="@dimen/dp_16"
            android:translationZ="@dimen/dp_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about" />

            <ImageView
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_4" />

            <TextView android:id="@+id/mVersionName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="V 1.1.2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/update" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/dp_8"
                android:src="@drawable/ic_next" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mDialBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@android:color/white"
            android:elevation="@dimen/dp_10"
            android:visibility="gone"
            android:padding="@dimen/dp_16"
            android:translationZ="@dimen/dp_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dial_number_blocking" />


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/dp_8"
                android:src="@drawable/ic_next" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@android:color/white"
            android:elevation="@dimen/dp_10"
            android:padding="@dimen/dp_16"
            android:translationZ="@dimen/dp_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/dp_8"
                android:src="@drawable/ic_next" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mTextSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@android:color/white"
            android:elevation="@dimen/dp_10"
            android:padding="@dimen/dp_16"
            android:translationZ="@dimen/dp_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="字体大小" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/dp_8"
                android:src="@drawable/ic_next" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/mExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@android:color/white"
                android:elevation="@dimen/dp_20"
                android:gravity="center"
                android:padding="@dimen/dp_16"
                android:text="@string/exit"
                android:textColor="@android:color/holo_red_light"
                android:translationZ="@dimen/dp_5" />
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/mUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/dp_20">

        <View
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="center"
            android:background="#999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_4_5"
            android:paddingEnd="@dimen/dp_4_5"
            android:text="@string/unitBelong"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="center"
            android:background="#999999" />

    </LinearLayout>
</FrameLayout>
