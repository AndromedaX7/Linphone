<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UserModifyActivity">

    <RelativeLayout android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"

            android:elevation="@dimen/dp_10"
            android:gravity="center"
            android:text="修改个人信息"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18"
            android:translationZ="@dimen/dp_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/meBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="22dp"
            android:src="@drawable/previous" />
    </RelativeLayout>




    <LinearLayout
        android:id="@+id/mUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="@dimen/dp_10"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_16"
        android:translationZ="@dimen/dp_2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textColor="@color/colorTextColorDark"
                android:textSize="@dimen/sp_18" />


        </LinearLayout>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="20dp"
             />


        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"

            android:src="@drawable/ic_next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mCodeModify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@android:color/white"
        android:elevation="@dimen/dp_10"
        android:padding="@dimen/dp_16"
        android:translationZ="@dimen/dp_2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="集团号:" />


        <TextView
            android:id="@+id/code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="4089" />


        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/dp_8"
            android:src="@drawable/ic_next"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mNameModify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@android:color/white"
        android:elevation="@dimen/dp_10"
        android:padding="@dimen/dp_16"
        android:translationZ="@dimen/dp_2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/nike_name" />

        <TextView
            android:id="@+id/mName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="" />


        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/dp_8"
            android:src="@drawable/ic_next" />
    </LinearLayout>

</LinearLayout>